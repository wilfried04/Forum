<div class="col-md-3 p-3 border-left">
  <h5>Thread creation</h5>
  <%= form_with(model: @topic, url: topics_path, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Please enter your name', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: 'Please enter a title', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <p>
        <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |c| %>
          <%= c.label do %>
            <%= c.check_box %>
            <%= c.text %>
          <% end %>
        <% end %>
      </p>
    </div>

    <div class="form-group">
      <%= f.submit 'Create New', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>